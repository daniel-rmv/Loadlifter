# Example environment configuration for Loadlifter.
# Copy this file to `.env` and adjust the values for your environment.

# --- Robot configuration paths ---
ROBOT_CONFIG_PATH=src/utils/robot_config.json
ROBOT_CALIB_FILE=/absolute/path/to/calib.json

# --- Camera stream defaults ---
CAMERA_ENABLED=0
CAMERA_SOURCE=0
CAMERA_HOST=0.0.0.0
CAMERA_PORT=5000
CAMERA_QUALITY=70
CAMERA_OUTW=960
CAMERA_MAXFPS=30
CAPTURE_STREAM_URL=http://127.0.0.1:5000/video
PI_CAMERA_BASE_URL=http://127.0.0.1:5000

# --- LiDAR stream defaults ---
LIDAR_STREAM_HOST=0.0.0.0
LIDAR_STREAM_PORT=5051
LIDAR_STREAM_HZ=12.0

# Add any additional secrets such as API tokens below (KEY=value)
